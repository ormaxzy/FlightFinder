<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FlightFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Text styles -->
    <style name="Title1">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/grey7</item>
    </style>
    <style name="Title2">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Title3">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Title4">
        <item name="android:fontFamily">@font/sf_pro_display_light_italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Text1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Text2">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonText1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TabText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullScreenBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenBottomSheet</item>
    </style>

    <style name="FullScreenBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/RoundedTopCorners</item>
    </style>

    <style name="RoundedTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="CustomButtonThemeBlue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
    </style>
    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
</resources>
